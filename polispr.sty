%create titlepage with university name and stuff
\makeatletter
\renewcommand{\maketitle}{\begin{titlepage}
    \pagestyle{empty}
    \pagenumbering{gobble}
    \begin{center}\small
        \LARGE\textbf{\MakeUppercase{\univ}}\\
        \Large\textsc{\faculty}\\
        \normalsize \institute
    \end{center}
    \vspace{5cm}
    \noindent
    \begin{center}
      \LARGE \@author
    \end{center}
    \vspace{7cm}
    \noindent
    \begin{center}
        \large \pretitle
    \end{center}
    \begin{center}
        \Large \textbf{\@title}
    \end{center}
    \vspace*{\stretch{6}}
    \begin{center}
        \@date
    \end{center}
  \end{titlepage}
}

